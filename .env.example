# ===================================
# EMAIL (Resend)
# ===================================
# Create an API key at: https://resend.com/api-keys
# Used for sending messages from your contact form
RESEND_API_KEY=your_resend_api_key_here

# The email address where contact form messages should be delivered
RESEND_TO_EMAIL_ADDRESS=your.email@example.com


# ===================================
# PERSONAL INFO
# ===================================
# Your date of birth (format: YYYY-MM-DD)
# Used to automatically calculate your age on the About page
NEXT_PUBLIC_DOB=2005-11-29


# ===================================
# DEPLOYMENT
# ===================================
# The full URL of your deployed site
NEXT_PUBLIC_APP_URL=https://yoursite.com

# The GitHub repository for your portfolio project
NEXT_PUBLIC_GITHUB_REPO_URL=https://github.com/yourusername/portfolio


# ===================================
# CLOUDINARY (Image Hosting)
# ===================================
# Get your Cloud Name here: https://cloudinary.com
# Used for hosting and optimizing your images
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name


# ===================================
# GISCUS (Comments)
# ===================================
# Set up Giscus at: https://giscus.app
# The repo ID and repo name are provided during setup
NEXT_PUBLIC_GISCUS_REPO_ID=your_giscus_repo_id
NEXT_PUBLIC_GISCUS_REPO=yourusername/yourrepo


# ===================================
# AI CHAT (Groq)
# ===================================
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here


# ===================================
# SEO (Google Search Console)
# ===================================
# Verification ID from: https://search.google.com/search-console
GOOGLE_SITE_VERIFICATION_ID=your_verification_id


# ===================================
# RATE LIMITING (Upstash Redis / Vercel KV)
# ===================================
# These are automatically created when you set up Vercel KV or Upstash Redis.
# You only need them if you're using rate limiting.
PORTFOLIO_KV_REST_API_READ_ONLY_TOKEN=
PORTFOLIO_KV_REST_API_TOKEN=
PORTFOLIO_KV_REST_API_URL=
PORTFOLIO_KV_URL=
PORTFOLIO_REDIS_URL=
VERCEL_OIDC_TOKEN=
